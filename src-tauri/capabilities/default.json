{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DOCUMENT/*"
        },
        {
          "path": "$DOCUMENT/"
        },
        {
          "path": "$DOCUMENT"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOWNLOAD/*"
        },
        {
          "path": "$DOWNLOAD/"
        },
        {
          "path": "$DOWNLOAD"
        },
        {
          "path": "$AUDIO/**"
        },
        {
          "path": "$AUDIO/*"
        },
        {
          "path": "$AUDIO/"
        },
        {
          "path": "$AUDIO"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "$DESKTOP/*"
        },
        {
          "path": "$DESKTOP/"
        },
        {
          "path": "$DESKTOP"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$HOME/*"
        },
        {
          "path": "$HOME/"
        },
        {
          "path": "$HOME"
        },
        {
          "path": "$PICTURE/**"
        },
        {
          "path": "$PICTURE/*"
        },
        {
          "path": "$PICTURE/"
        },
        {
          "path": "$PICTURE"
        },
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$PUBLIC/*"
        },
        {
          "path": "$PUBLIC/"
        },
        {
          "path": "$PUBLIC"
        },
        {
          "path": "$VIDEO/**"
        },
        {
          "path": "$VIDEO/*"
        },
        {
          "path": "$VIDEO/"
        },
        {
          "path": "$VIDEO"
        }
      ]
    },
    "fs:write-all",
    "fs:allow-app-write",
    "fs:allow-app-read",
    "fs:scope-appdata",
    "fs:allow-appdata-read",
    "fs:allow-appdata-write",
    "fs:allow-appdata-write-recursive",
    "fs:allow-appdata-meta",
    "fs:allow-appdata-meta-recursive",
    "fs:allow-appdata-read-recursive",
    "fs:scope-appdata-index",
    "fs:allow-applocaldata-read",
    "fs:allow-applocaldata-write",
    "fs:create-app-specific-dirs",
    "fs:allow-create",
    "fs:allow-read-dir",
    "fs:allow-data-write",
    "fs:allow-mkdir",
    "fs:read-all",
    "fs:read-dirs",
    "fs:allow-open",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-write-file",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "dialog:default"
  ]
}